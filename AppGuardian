import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Guardian App',
      theme: ThemeData(
        primarySwatch: Colors.blue,
      ),
      home: HomePage(),
    );
  }
}

class HomePage extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Tela Inicial - Guardian App'),
      ),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: <Widget>[
            Text(
              'Bem-vindo ao Guardian!',
              style: TextStyle(fontSize: 24, fontWeight: FontWeight.bold),
            ),
            SizedBox(height: 20),
            ElevatedButton(
              onPressed: () {
                // Aqui você pode adicionar a navegação para outra tela
                Navigator.push(
                  context,
                  MaterialPageRoute(builder: (context) => GerenciarContatosPage()),
                );
              },
              child: Text('Gerenciar Contatos'),
            ),
            SizedBox(height: 10),
            ElevatedButton(
              onPressed: () {
                // Ação para outra funcionalidade
              },
              child: Text('Configurar Emergências'),
            ),
          ],
        ),
      ),
    );
  }
}

// Página para gerenciar contatos
class GerenciarContatosPage extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Gerenciar Contatos'),
      ),
      body: Center(
        child: Text(
          'Aqui você pode gerenciar seus contatos.',
          style: TextStyle(fontSize: 20),
        ),
      ),
    );
  }
}
